<div id="article_container">
  <div id="article">

    <div id="article_poster"></div>

    <div id="vert_divider_outer">
      <div id="vert_divider_inner">
      </div>
    </div>

    <div id="article_title">{{article.title}}</div>
    <div id="article_author">by {{article.author}}</div>
    <div id="article_body">{{article.body}}</div>


    {{!--
    <h3>Title: {{article.title}}</h3>
