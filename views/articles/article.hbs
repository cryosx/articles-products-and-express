      <button>All Articles</button>
    </a> --}}
    <div id="article_button_container">
      <a id="article_edit" href="/{{endpoint}}/{{article.title}}/edit">
        <i class="material-icons">edit</i>
      </a>

      <form id="article_delete" action="/{{endpoint}}/{{article.urlTitle}}?_method=DELETE" method="POST">
        <button type="submit" value="Delete">
          <i class="material-icons">delete</i>
        </button>
      </form>
    </div>

  </div>
</div>