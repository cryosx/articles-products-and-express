<a href="/{{endpoint}}/new">
  <button>Add New Article</button>
</a>
<h1>{{error}}</h1>
<ol>
  {{#if render}} {{#each articles}}
  <li>
    <h3>Title:
      <a href="/{{../endpoint}}/{{urlTitle}}"> {{title}}</a>
    </h3>
    <p>Author: {{author}}</p>
    <p>Body: {{body}}</p>
  </li>
  <form action="/{{../endpoint}}/{{urlTitle}}?_method=DELETE" method="POST">
    <input type="submit" value="Delete">
  </form>
  {{/each}} {{/if}}
</ol>